<% if (post.link){ %>
  <h1 itemprop="name" class="entry-title">
    <a href="<%- url_for(post.link) %>" target="_blank" itemprop="url"><%= post.title %></a>
  </h1>
<% } else if (post.title){ %>
  <% if (index){ %>
    <h1 itemprop="name" class="entry-title">
      <a href="<%- url_for(post.path) %>"><%= post.title %></a>
    </h1>
  <% } else { %>
    <h1 class="entry-title" itemprop="headline name">
      <%= post.title %>
    </h1>
  <% } %>
<% } %>